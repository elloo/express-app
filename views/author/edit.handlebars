<h1> EDIT </h1>
<div class="row">
    <div class="col s12 m6">
        <h2>New Author</h2>
        <form method="post" action="/authors/{{author._id}}?_method=PUT">
            <div>
                <label>Name</label>
            </div>
            <div>
                <input type="text" name="name" value="{{author.name}}"/>
            </div>
            <div>
                <label>Bio</label>
            </div>
            <div>
                <textarea name="bio">{{author.bio}}</textarea>
            </div>
            <div>
                <select name="gender">
                    <option value="{{author.gender}}" hidden selected>{{author.gender}}</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Non-binary">Non-binary</option>
                </select>
            </div>
            <div>
                <input type="submit" class="btn btn-small" value="Submit Form" />
            </div>
        </form>

    </div>
</div>